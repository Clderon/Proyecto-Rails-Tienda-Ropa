
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center text-2xl font-bold text-teal-500">Categorias</h1>
    </div>
  </div>
</div>
<table class="table-auto w-[80%] m-auto mt-3 border-collapse border border-gray-300">
  <thead class="bg-gray-100">
    <tr>
      <th class="border border-gray-300 px-4 py-2 text-left">Nombre</th>
      <th class="border border-gray-300 px-4 py-2 text-center">Editar</th>
      <th class="border border-gray-300 px-4 py-2 text-center">Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr id="<%= dom_id(category) %>" class="hover:bg-gray-100">
        <td class="border border-gray-300 px-4 py-2"><%= category.name %></td>
        <td class="border border-gray-300 px-4 py-2 text-center">
          <%= link_to "Edit", edit_category_path(category), class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 text-sm" %>
        </td>
        <td class="border border-gray-300 px-4 py-2 text-center">
          <%= link_to "Delete", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Alerta, ¿estás seguro?" }, class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 text-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= link_to new_category_path, class: "btn d-flex align-items-center custom-btn",  style: "text-align: left; border: 2px solid #17E010;"  do %>
        <%= image_tag 'icons/add.svg', width: 35, height: 35 %>
        <p class="ml-2" style="font-weight: bold;">Nueva categoría</p>
      <% end %>
    </div>
  </div>
</div>


